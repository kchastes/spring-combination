<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- 还可以使用p命名空间或者是c命名空间注入构造参数 -->
    <bean id="straight" class="chaste.core.straight.StraightValues">
        <!-- 可以使用idref引用另一个bean的<strong>名称</strong> 同时可以验证bean是否存在-->
        <property name="name" value = "KChaste Sun"/>
        <property name="age" value = "29" />
        <property name="properties">
            <props>
                <prop key="address">这种方式不会乱码</prop>
            </props>
            <!-- 这种方式中文会乱码...
            <value>
                key = value
            </value>
            -->
        </property>
        <!-- 注入list -->
        <property name="list">
            <list>
                <value>123</value>
                <null/>
                <value>哈哈哈</value>
            </list>
        </property>
        <!-- 注入map -->
        <property name="map">
            <map>
                <entry key = "name" value="KChaste Sun"/>
                <entry key = "123" value="213"/>
            </map>
        </property>
        <property name="set">
            <set>
                <value>哈哈</value>
                <value>哈哈</value>
            </set>
        </property>
    </bean>
    <!--  注入内部bean  id将被忽略
    <bean id="outer" class="...">
        &lt;!&ndash; instead of using a reference to a target bean, simply define the target bean inline &ndash;&gt;
        <property name="target">
            <bean class="com.example.Person"> &lt;!&ndash; this is the inner bean &ndash;&gt;
                <property name="name" value="Fiona Apple"/>
                <property name="age" value="25"/>
            </bean>
        </property>
    </bean>
    -->
</beans>